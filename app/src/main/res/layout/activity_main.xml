<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#4868bc"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="21 STICKS GAME"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#aab7e6"
        android:background="#1e215a"/>

    <TextView
        android:id="@+id/MainList"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="x"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="#474994"
        android:textColor="	#00ff00"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="#96ceb4"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>


    <TextView
        android:id="@+id/txtChooseNumberOfSticks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Number of Sticks:-"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:textColor="#ffff00"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/txtYourTurn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="YOUR TURN"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/Radio_SelectionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="20pt"
            android:layout_marginLeft="20pt">

            <RadioButton
                android:id="@+id/radio_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <RadioButton
                android:id="@+id/radio_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />

            <RadioButton
                android:id="@+id/radio_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />

            <RadioButton
                android:id="@+id/radio_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DisplayMobileChoosing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timer:\nMobile Choosing!"
                android:textAlignment="center"
                android:textColor="#f0ff"
                android:layout_gravity="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff0000"
                android:text="5"
                android:textSize="50dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REMOVE STICKS"
        android:layout_margin="20dp"
        android:background="#96ceb4"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMAINING STICKS:-"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:background="#474994"
        android:textSize="25dp"
        android:padding="10dp"
        android:textStyle="italic"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/CountDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00ff00"
        android:text="21"
        android:padding="30dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:background="#474994"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>